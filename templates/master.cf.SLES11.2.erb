<% if @smtp_listen == 'all' -%>
smtp      inet  n       -       <%= @jail %>       -       -       smtpd
<% else -%>
<%= @smtp_listen %>:smtp      inet  n       -       <%= @jail %>       -       -       smtpd
<% end -%>
